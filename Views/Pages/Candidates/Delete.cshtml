@page
@model Views.Pages.Candidates.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Candidate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.Degrees)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Candidate.Degrees != null && Model.Candidate.Degrees.Count > 0)
            {
                foreach (var degree in Model.Candidate.Degrees)
                {
                    <div>@degree.Name</div>
                }
            }
            else
            {
                <text>None</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.CV)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Candidate.CV != null && Model.Candidate.CV.Length > 0 && !string.IsNullOrEmpty(Model.Candidate.CVFileName))
            {
                <a asp-page="/Index" asp-page-handler="DownloadCV" asp-route-id="@Model.Candidate.Id">@Model.Candidate.CVFileName</a>
            }
            else
            {
                <text>N/A</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.CreationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.CreationTime)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Candidate.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="../Index">Back to List</a>
    </form>
</div>
